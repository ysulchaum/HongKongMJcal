<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#10000000" /> <!-- Shadow color (semi-transparent black) -->
            <corners android:radius="30dp" />
        </shape>
    </item>
    <!-- Foreground -->
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#C5D0BF" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</layer-list>